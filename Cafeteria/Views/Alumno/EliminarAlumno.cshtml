@model Cafeteria.Models.AlumnoModel;
@{
    ViewData["Title"] = "EliminarAlumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card col-8">
    <div class="card-header">
        Eliminar Contacto
    </div>
    <div class="card-body justify-content-center">
        <form asp-action="EliminarAlumno" asp-controller="Alumno" method="post">
            <input asp-for="Nss" type="hidden" class="form-control" />
            <div class="alert alert-danger" role="alert">
                ¿Deseas eliminar el Alumno @Html.DisplayTextFor(m=>m.Nombre)?
            </div>

            
            <div class="col-4">
                <button type="submit" class="btn btn-primary">Eliminar</button>
                <a asp-action="ListarAlumno" asp-controller="Alumno">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>